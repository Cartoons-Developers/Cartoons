<html>
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" href="/favicon.ico" type="image/png" />
		<title>Cartoons Studio</title>
		<link rel="stylesheet" type="text/css" href="/pages/css/modern-normalize.css">
		<link rel="stylesheet" type="text/css" href="/pages/css/global.css">
		<link rel="stylesheet" type="text/css" href="/pages/css/flash.css">
		<style>
			body {
				background: #eee;
			}

		</style>
		<script src="/pages/js/jquery.js"></script>
		<script src="/pages/js/filesize.js"></script>
		<script src="/pages/js/global.js"></script>
		<script>
			const STORE_URL = "<%= it.env.STORE_URL %>";
			const CLIENT_URL = "<%= it.env.CLIENT_URL %>";

		</script>
	</head>

	<body style="margin:0px">
		<%~ includeFile("../includes/header", { env: it.env }) %>
		<main>
			<nav id="importer">
				<nav id="import_head">
					<label id="import-toggle" for="importer-files" class="button_big">UPLOAD FILES</label>
					<h3 class="close-button" onclick="hideImporter()">✖</h3>
					<form>
						<input id="importer-files" type="file" name="file" title="Upload Files" accept=".mp3,.wav,.swf,.gif,.png,.jpg,.mp4" style="display:none" />
					</form>
				</nav>
				<div id="importer-queue"></div>
			</nav>
			<%~ it.extra.object(it.extra.attrs, it.extra.params) %>
		</main>
		<div id="previewer" style="display:none">
			<div class="popup_inside">
				<h2 class="popup_heading">Preview Cartoon</h2>
			
				<object id="preview_player" data="<%= it.env.SWF_URL %>/player.swf" type="application/x-shockwave-flash"
					width="640" height="360">
					<param name="flashvars"/>
					<param name="allowScriptAccess" value="always"/>
					<param name="allowFullScreen" value="true"/>
				</object>
				<div class="buttons">
					<button class="btn btn_popup" type="button" onclick="hidePreviewer();">BACK TO EDITING</button>
					<button class="btn btn_primary btn_popup" type="button" onclick="publishStudio();">SAVE NOW</button>
				</div>

				<a class="close-button" onclick="hidePreviewer()">×</a>
			</div>
		</div>
	</body>

	<script src="/pages/js/studio.js"></script>
</html>
