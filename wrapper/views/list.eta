<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8"/>
		<link rel="icon" href="/favicon.ico" type="image/png"/>
		<title>Video List - Cartoons</title>
		<meta name="description" content="Cartoons' Video List"/>
		<link rel="stylesheet" type="text/css" href="/pages/css/global.css">
		<link rel="stylesheet" type="text/css" href="/pages/css/list.css">
		<script src="/pages/js/jquery.js"></script>
	</head>

	<body>
		<%~ includeFile("./includes/header", { env: it.env }) %>

		<main>
			<nav class="tab_navigation">
				<a href="javascript:;" class="tab movies" onclick="switchFilter(false)">Cartoons</a>
				<a href="javascript:;" class="tab starters" onclick="switchFilter(true)">Starters</a>
			</nav>
			<table>
				<thead>
					<tr>
						<td></td>
						<td id="search_container"><input id="search_bar" type="text" placeholder="Search Cartoons"/></td>
						<td>Last Modified</td>
						<td></td>
					</tr>
				</thead>
				<tbody></tbody>
				<tfoot>
					<tr>
						<td colspan="127"><a id="load_more" href="javascript:;">LOAD MORE...</a></td>
					</tr>
				</tfoot>
			</table>
		</main>

		<%~ includeFile("./includes/footer", { env: it.env }) %>
	</body>

	<script src="/pages/js/global.js"></script>
	<script>
		let json, searchTerm = "";
		let starters = true;
		const tbody = $("tbody");
		const loadMore = $("#load_more");
		const searchBar = $("#search_bar");

		let C = 0;
		function loadRows() {
			// load only 69 rows
			let c = C;
			C += 69;
			for (; c < C; c++) {
				// we reached the end
				if (c > json.length - 1) {
					loadMore.hide();
					break;
				}

				const tbl = json[c];

				if (
					tbl.title.toLowerCase().indexOf(searchTerm.toLowerCase()) === -1 &&
					searchTerm.length > 0
				) {
					continue;
				}
				// make the date and time less confusing to read
				const date = tbl.date.split("T")[0];
				const time = tbl.date.split("T")[1].substring(0, 8);
				// escape the title
				const title = tbl.title.replace(/&/g, "&amp;").replace(/</g, "&lt;").replace(/>/g, "&gt;");

				tbody.append(
					`<tr id="${tbl.id}">
						<td>
							<img src="/file/movie/thumb/${tbl.id}" alt="thumbnail"/>
						</td>
						<td>
							<div title="${tbl.id}">${title}</div>
							<div>${tbl.duration}</div>
						</td>
						<td>
							<span>${date}, ${time}</span>
						</td>
						<td>
							<a href="javascript:;" onclick="popup('${tbl.id}')" title="Play"></a>
							<a href="/go_full?movieId=${tbl.id}${starters ? "&isStarter=1" : ""}" title="Edit"></a>
							<a href="/file/movie/file/${tbl.id}" download="${tbl.title}.zip" title="Download files -- NOT AN EXPORTER"></a>
							<a href="javascript:;" onclick="popupExport('${tbl.id}')" title="Export"></a>
							<a href="javascript:;" onclick="destructive('${tbl.id}', 'delete')" title="Delete"></a>
						</td>
					</tr>`.trim()
				);
			}
		}
		// i want more movies
		loadMore[0].onclick = loadRows;

		searchBar.on("input", () => {
			searchTerm = searchBar.val();
			tbody.html("");
			C = 0;
			loadMore.show();
			loadRows();
		});

		function switchFilter(shouldEqual) {
			if (starters == shouldEqual) return;
			$(".tab").removeClass("selected");
			if (starters) {
				starters = false;
				$(".tab.movies").addClass("selected");
			} else {
				starters = true;
				$(".tab.starters").addClass("selected");
			}
			$.get(`/api/${starters ? "starter" : "movie"}/list`)
				.done((data) => {
					json = data;
					tbody.html("");
					C = 0;
					loadMore.show();
					loadRows();
				});
		}
		switchFilter();

		function destructive(mId, act) {
			const yesno = confirm(`Are you sure you want to ${act} movie #${mId}?`);

			if (yesno)
				$.get(`/api/movie/${act}/${mId}`)
					.done((data) => {
						if (data.status == "ok") {
							switch (act) {
								case "clone":
									window.location = `/go_full?movieId=${data.mId}`;
									break;
								case "delete":
									const $elem = $("#" + mId);
									$elem.fadeOut(() => $elem.remove());
									break;
							}
						} else alert("Guess you're stuck with your movie.");
					});
		}

		function popup(id) {
			window.open(`/player?movieId=${id}`, 'MsgWindow', 'width=1280,height=720,left=' + (screen.width / 2 - 640) +
				',top=' + (screen.height / 2 - 360));
		}
		function popupExport(id) {
			window.open(`/exporter?movieId=${id}`, 'MsgWindow', 'width=400,height=400,left=' + (screen.width / 2 - 640) +
				',top=' + (screen.height / 2 - 360));
		}

	</script>
</html>
